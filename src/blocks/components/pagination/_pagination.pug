mixin pagination(pages, current, link)
    if pages > 1
        .pagination
            if current == 1
                a(disabled role='button' aria-label='Назад').pag-button_left.pag-button-with-icon.pag-button-with-icon_left_disabled
                    span.pag-button__span Назад
            else
                a.pag-button-with-icon.pag-button_left(href=`/${link}/1` role='button' aria-label='Назад')
                    span.pag-button__span Назад
            - let start = Math.max(1, current - 2)
            - let end = Math.min(pages, current + 2)
            if pages < 7
                - for (let i = 1; i <= pages; i++)
                    if i == current
                        a.pag-button.pag-button_active(href=`/${link}/${i}` role='button' aria-label=`Страница ${i}`) #{i}
                    else
                        a.pag-button(href=`/${link}/${i}` role='button' aria-label=`Страница ${i}`) #{i}  
            else            
                if start > 2
                    a.pag-button(href=`/${link}/1` role='button' aria-label=`Страница 1`) 1
                if start > 2
                    span ...
                - for (let i = start; i <= end; i++)
                    if i == current
                        a.pag-button.pag-button_active(href=`/${link}/${i}` role='button' aria-label=`Страница ${i}`) #{i}
                    else
                        a.pag-button(href=`/${link}/${i}` role='button' aria-label=`Страница ${i}`) #{i}
                if end < pages - 2
                    span ...
                if end < pages 
                    a.pag-button(href=`/${link}/${pages}` role='button' aria-label=`Страница ${pages}`) #{pages}
            if current == pages
                a(disabled role='button' aria-label='Вперед').pag-button-with-icon.pag-button_right.pag-button-with-icon_right_disabled 
                    span.pag-button__span Вперед
            else
                a.pag-button-with-icon.pag-button_right(href=`/${link}/${pages}` role='button' aria-label='Вперед') 
                    span.pag-button__span Вперед