mixin navigation(data)
    .navigation 
        a.navigation__link
            ion-icon(name=`arrow-back-outline` class=`icon` role='button' aria-label='Назад')
        .navigation__pages(tabindex='-1')
            span.navigation__page #{data.first_page}
            span.navigation__page /
            span.navigation__page #{data.end_page}
        a.navigation__link
            ion-icon(name=`arrow-forward-outline` class=`icon` role='button' aria-label='Вперед')