mixin about-partners()
    .about-partners   
        .full-width-container
            .full-width-background
                .full-width-content
                    img(src='../resources/about_partners_bg.svg').about-partners__bg
                    .about-partners__container
                        +title({
                            title: 'Партнеры и города побратимы'
                        })
                        .about-partners__list
                            .about-partners__row
                                +about-partner-card({
                                    title: 'Залаэгерсег',
                                    image: 'flag_hungary.svg',
                                    caption: 'Венгрия',
                                }) 
                                +about-partner-card({
                                    title: 'Катерини',
                                    image: 'greece.svg',
                                    caption: 'Греция',
                                }) 
                                +about-partner-card({
                                    title: 'Порвоо',
                                    image: 'finland.svg',
                                    caption: 'Финляндия',
                                }) 
                                +about-partner-card({
                                    title: 'Гомель',
                                    image: 'belarus.svg',
                                    caption: 'Республика Беларусь',
                                }) 
                                +about-partner-card({
                                    title: 'Кишинев',
                                    image: 'moldova.svg',
                                    caption: 'Республика Молдова',
                                })  
                            .about-partners__row    
                                +about-partner-card({
                                    title: 'Петрозаводск',
                                    image: 'flag_hungary.svg',
                                    caption: 'Республика Карелия',
                                }) 
                                +about-partner-card({
                                    title: 'Тобольск',
                                    image: 'tumen.svg',
                                    caption: 'Тюменская область',
                                }) 
                                +about-partner-card({
                                    title: 'Новосибирск',
                                    image: 'novosibirsk.svg',
                                    caption: 'Новосибирская область',
                                }) 
                                +about-partner-card({
                                    title: 'Псков',
                                    image: 'pskov.svg',
                                    caption: 'Псковская областть',
                                }) 
                                +about-partner-card({
                                    title: 'Альметьевск',
                                    image: 'tatarstan.svg',
                                    caption: 'Республика Татарстан',
                                }) 
