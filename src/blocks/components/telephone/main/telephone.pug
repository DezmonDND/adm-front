include ../elem/telephone-elem
include ../../../libs/inputs/_inputs
include ../../../libs/buttons/_buttons

mixin telephone(items)
    .telephone
        .telephone-search 
            .telephone-search-top
                +input({ placeholder: 'ФИО', name: 'fio' })
            .telephone-search-mid 
                +input({ placeholder: 'Должность', name: 'status' })
                +input({ placeholder: 'Подразделение', name: 'division' })
                +input({ placeholder: 'Телефон', name: 'phone' })
            .telephone-search-bot 
                +input({ placeholder: 'Контекстный поиск', name: 'first_name' })
                .telephone-search-bot-btns 
                    +button({ size: 'l', type: 'button', class: 'button_white', event: '1', text: 'Сбросить' })
                    +button({ size: 'l', type: 'button', class: 'button_blue', event: '1', text: 'Искать' })
        each item in items
            +telephone-elem(item)