mixin important-links()
    .important-links
        +main-title({
            href: '/',
            title: 'Самое важное',
        })
        .important-links__container
            +main-link({
                class: 'important',
                href: '/',
                svg_icon: 'circle_icon_main.svg',
                title: 'Лицам с ограниченными возможностями',
            })
            +main-link({
                class: 'important',
                href: '/',
                svg_icon: 'arrow-in-cub_icon_main.svg',
                title: 'Афиша на Культуре.РФ',
            })
            +main-link({
                class: 'important',
                href: '/',
                svg_icon: 'arrow-in-cub_icon_main.svg',
                title: 'Инициативые проекты',
            })
            +main-link({
                class: 'important',
                href: '/',
                svg_icon: 'arrow-in-cub_icon_main.svg',
                title: 'Бюджет для граждан Сургута',
            })
            +main-link({
                class: 'important',
                href: '/',
                svg_icon: 'circle_icon_main.svg',
                title: 'Налоговая политика',
            })
            +main-link({
                class: 'important',
                href: '/',
                svg_icon: 'arrow-in-cub_icon_main.svg',
                title: 'Национальные проекты',
            })
        .important-links__navigation
            +navigation({
                first_page: '1',
                end_page: '7',
                    })
        .important-links__slider            
            +slider({ class: 'important-links' })        