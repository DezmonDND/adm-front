include ../../../libs/inputs/_inputs.pug 
include ../../../libs/buttons/_buttons.pug 

mixin login-code(num = '22222')
    .overlay.hidden
    .login.login-code.hidden
        .login__content
            .login__content-top
                span Вход          
                ion-icon(name = "close-outline", class = 'icon', onclick = 'hideCode()')
            .login__content-main
                .login__content-main__text
                    .login__content-main__title
                        span Введите код
                    .login__content-main__subtitle
                        span= `Мы отправили код подтверждения на номер `+ num
                .login__content-main__input
                    +input({placeholder: 'Код'})
                // Если код неверный то инпут меняется на этот
                .login__content-main__input.wrong-code
                    +input({placeholder: 'Код'})
                    span Неверный код, попробуйте еще раз
                .login__content-main__confirm-email
                    span(onclick = "showEmail()") Войти по почте 