mixin hearing-event-popup(data)
    .hearing-event-popup
        .hearing-event-popup__container
            .hearing-event-popup__top-content 
                .hearing-event-popup__title Публичные слушания от 01.10.2024
                .hearing-event-popup__buttons 
                    +button({ type: 'button',  event: 'getLink()', class: 'button files-list__delete-button hearing-event-popup__share-button', icon: 'share-social-outline' })
                    +button({ type: 'button',  event: 'closeHearingEventPopup()', class: 'button files-list__delete-button', icon: 'close-outline' })
            .hearing-event-popup__bottom-content 
                .hearing-event-popup__desc-title Описание
                .hearing-event-popup__desc-text Публичные слушания (постановление Администрации города от 23.10.2024 №5484) по внесению изменений в проект межевания территории микрорайона 20А в городе Сургуте, утвержденный постановлением Администрации города от 24.03.2009 № 1009 «Об утверждении проекта планировки территории «Застройка микрорайона 20А город Сургут» (с изменениями от 16.08.2016 №6125, 06.08.2019 № 5792, 04.12.2023 № 6018), в части земельных участков      

mixin hearing-add-event-popup(data)
    form.hearing-add-event-popup
        .hearing-add-event-popup__container
            .hearing-add-event-popup__title-block
                h5.hearing-add-event-popup__title Создать новое событие
                +button({ type: 'button',  event: 'closeHearingAddEventPopup(event)', class: 'button files-list__delete-button', icon: 'close-outline' })
            .hearing-add-event-popup__content 
                .hearing-add-event-popup__time
                    .hearing-add-event-popup__fields 
                        label.hearing-add-event-popup__label Часы
                        +input({ size: 's', placeholder: '00', name: "eventStart"}) 
                    .hearing-add-event-popup__fields 
                        label.hearing-add-event-popup__label Минуты
                        +input({ size: 's', placeholder: '00', name: "eventEnd"})  
                .hearing-add-event-popup__desc           
                    .hearing-add-event-popup__fields 
                        label.hearing-add-event-popup__label Заголовок
                        +input({ size: 's', placeholder: 'Название', name: "eventTitle"}) 
                    .hearing-add-event-popup__fields 
                        label.hearing-add-event-popup__label Описание
                        +textarea({ size: 's', placeholder: 'Описание', name: "eventAbout", value: '100000'})  
            +button({ type: 'button', size: 's', class: 'button_blue', event: 'saveEvent()', text: `Сохранить событие` })                 

mixin hearing-calendar()
    .hearing-calendar__container
        div(id='hearing-calendar').hearing-calendar
            +hearing-add-event-popup()



