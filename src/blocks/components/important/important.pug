include ../../components/title/main/_main-title
include ../../components/slider/_slider

mixin important-inf()   
    .important-inf
        +main-title({
            href: '/',
            title: 'Важная информация для жителей',
            slider: {
                class: 'important-inf'
            },
        })   
        .important-inf__container(id='important-inf__container')
            a(href='/')
                img.important-inf__banner(src='../img/banner_3.png' alt='Баннер')
            a(href='/')
                img.important-inf__banner(src='../img/banner_2.png' alt='Баннер') 
            a(href='/')
                img.important-inf__banner(src='../img/banner.png' alt='Баннер') 
            a(href='/')
                img.important-inf__banner(src='../img/banner.png' alt='Баннер')
            a(href='/')
                img.important-inf__banner(src='../img/banner.png' alt='Баннер')
        .important-inf__slider 
            +slider({ class: 'important-inf' })