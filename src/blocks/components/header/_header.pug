mixin header()
    header.header 
        .header__top-content
            .header__top-links
                .header_links
                    a(href='/').header__link Быстрый доступ
                    a(href='/').header__link Быстрый доступ
                    a(href='/').header__link Быстрый доступ
                    a(href='/').header__link Быстрый доступ
                    a(href='/').header__link Быстрый доступ
