                    a(href='/').header__social__icon 
                        img(src=`../icons/vk_icon.svg`)
                    a(href='/').header__social__icon 
                        img(src=`../icons/ok_icon.svg`)
                    a(href='/').header__social__icon 
                        img(src=`../icons/tg_icon.svg`)
