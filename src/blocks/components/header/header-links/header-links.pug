include ../dm-second-menu/dm-second-menu

mixin header-links(data = [])
    ul.header_links
        each link in data
            if link.menu
                li.header__link(
                    aria-expanded="false",
                )
                    button(
                        style='all:unset'
                        role='button' 
                        aria-label=link.title
                        tabindex='-1'
                        ) #{link.title}
                    if link.title === 'О Думе города'  
                        +second-menu({
                            columns: [
                                {
                                    links: [
                                        { title: 'Общие сведения', type: 'title', items: [
                                            { title: 'Историческая справка', type: 'link' },
                                            { title: 'Официальные символы', type: 'link' },
                                            { title: 'Территориальные органы общественного самоуправления', type: 'link' },
                                            { title: 'Почтовый адрес', type: 'link' },
                                        ]},
                                        { title: 'К сведению СМИ', type: 'title', items: [
                                            { title: 'Аккредитация журналистов', type: 'link' },
                                            { title: 'Обзор законодательства', type: 'link' },
                                        ]},
                                    ],
                                },
                                {
                                    links: [
                                        { title: 'Полномочия', type: 'title' },
                                        { title: 'Финансы', type: 'title' },
                                        { title: 'Новости', type: 'title' },
                                    ],
                                },
                            ]
                        })   
                    if link.title === 'Состав и структура' 
                        +second-menu({
                            columns: [
                                {
                                    links: [
                                        { title: 'Аппарат Думы города', type: 'title', items: [
                                            { title: 'Информация о кадровом обеспечении', type: 'link' },
                                            { title: 'Телефонный справочник', type: 'link' },
                                        ]},
                                        { title: 'Структура Думы города', type: 'title', items: [
                                            { title: 'Руководство', type: 'link' },
                                            { title: 'Председатель Думы', type: 'link' },
                                        ]},
                                    ],
                                },
                                {
                                    links: [
                                        { title: 'Депутатские объединения в Думе города', type: 'title' },
                                        { title: 'Депутаты Думы города VII созыва', type: 'title' },
                                        { title: 'Постоянные комитеты', type: 'title' },
                                    ],
                                },
                            ]
                        })
                    if link.title === 'Документы Думы' 
                        +second-menu({
                            columns: [
                                {
                                    links: [
                                        { title: 'Постановления Председателя Думы', type: 'title' },
                                        { title: 'Регламент Думы города', type: 'title' },
                                        { title: 'Решения Думы', type: 'title' },
                                    ],
                                },
                                {
                                    links: [
                                        { title: 'Обработка персональных данных', type: 'title' },
                                        { title: 'Положение о помощниках депутата', type: 'title' },
                                        { title: 'Положения об этике', type: 'title' },
                                        { title: 'Устав города', type: 'title' },
                                    ],
                                },
                            ]
                        })    
                    if link.title === 'Деятельность'        
                        +second-menu({
                            columns: [
                                {
                                    links: [
                                        { title: 'Антикоррупционная деятельность', type: 'title', items: [
                                            { title: 'Антикоррупционная экспертиза', type: 'link' },
                                            { title: 'Комиссия по соблюдению требований к служебному поведению муниципальных служащих и урегулированию конфликта интересов в Думе города', type: 'link' },
                                            { title: 'Нормативные правовые и иные акты', type: 'link' },
                                            { title: 'Сведения о доходах', type: 'link' },
                                        ]},
                                        { title: 'План работы', type: 'title', items: [
                                            { title: 'Депутатские слушания', type: 'link' },
                                            { title: 'Публичные слушания', type: 'link' },
                                            { title: 'Заседания Думы города', type: 'link' },
                                            { title: 'Заседания постоянных комитетов', type: 'link' },
                                        ]},
                                    ],
                                },
                                {
                                    links: [
                                        { title: 'Постоянные комитеты', type: 'title', items: [
                                            { title: 'Комитет по бюджету, налогам, финансам и имуществу', type: 'link' },
                                            { title: 'Комитет по городскому хозяйству и перспективному развитию города', type: 'link' },
                                            { title: 'Комитет по социальной политике', type: 'link' },
