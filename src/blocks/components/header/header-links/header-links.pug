                                        { title: 'Муниципальные закупки', type: 'title' },
                                        { title: 'Совет депутатов четырех Дум', type: 'title' },
                                    ],
                                },
                            ]
                        }) 
                    if link.title === 'Обратная связь'
                        +second-menu({
                            columns: [
                                {
                                    links: [
                                        { title: 'Обращения граждан', type: 'title' },
                                        { title: 'Обзор обращений', type: 'title' },
                                        { title: 'Порядок обращения граждан', type: 'title' },
                                    ],
                                },
                                {
                                    links: [
                                        { title: 'Электронное обращение', type: 'title' },
                                        { title: 'Информация о приеме избирателей по личным вопросам депутатами Думы города', type: 'title' },
                                        { title: 'Узнай, кто твой депутат', type: 'title' },
                                    ],
                                },
                            ]
                        }) 
                    if link.title === 'Быстрый доступ'
                        +second-menu({
                            columns: [
                                {
                                    links: [
                                        { title: 'Анонсы и события', type: 'title' },
                                        { title: 'Телефонный справочник', type: 'title' },
                                        { title: 'Инициативные проекты', type: 'title' },
                                        { title: 'Поддержка мобилизованных граждан и членов их семей', type: 'title' },
                                    ],
                                },
                            ]
                        }) 
                    if link.title === 'Обращения граждан'
                        +second-menu({
                            columns: [
