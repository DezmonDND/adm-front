                                        { title: 'Законодательная карта', type: 'title' },
                                        { title: 'Бюджет', type: 'title' },
                                    ],
                                },
                            ]
                        }) 
                    if link.title === 'Документы'
                        +second-menu({
                            columns: [
                                {
                                    links: [
                                        { title: 'Постановления', type: 'title', items: [
                                            { title: 'Постановления Главы города', type: 'link' },
                                            { title: 'Постановления Администрации города', type: 'link' },
                                            { title: 'Постановления Мэра и администрации города до 12.04.2005 г.', type: 'link' },
                                        ]},
                                        { title: 'Распоряжения', type: 'title', items: [
                                            { title: 'Распоряжения Главы города', type: 'link' },
                                            { title: 'Распоряжения Администрации города', type: 'link' },
                                            { title: 'Распоряжения Мэра и администрации города до 12.04.2005 г.', type: 'link' },
                                        ]},
                                    ],
                                },
                                {
                                    links: [
                                        { title: 'Важные документы для горожан', type: 'title' },
                                        { title: 'Проекты документов: антикоррупционная экспертиза и общественное обсуждение', type: 'title' },
                                        { title: 'Решения Думы города', type: 'title' },
                                        { title: 'Муниципальные программы', type: 'title' },
                                        { title: 'Порядок обжалования муниципальных правовых актов', type: 'title' },
                                        { title: 'Антимонопольный комплаенс', type: 'title' },
                                        { title: 'Оценка регулирующего воздействия и экспертиза муниципальных нормативных правовых актов (проектов)', type: 'title' },
                                    ],
                                },
                            ]
                        })                       
            else
                li.header__link(
                    aria-label=link.title
                    ) 
                    a(href=link.href tabindex='-1') #{link.title}          