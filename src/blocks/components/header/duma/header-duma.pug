include ../../search/_search.pug 
include ../logo/logo
include ../header-links/header-links
include ../socials/header-socials
include ../../../libs/buttons/_buttons.pug 
include ../../../libs/links/_links.pug 
include ../../../libs/search-button/_search-button.pug 
include ../../../libs/inputs/_inputs.pug

mixin header-duma()
    header.header-duma
        .header__top-content 
            +logo({
                href: '/',
                title: 'Дума Сургута',
                about: 'Официальный портал',
            })
            +search(
                {name: 'number', size: 's', placeholder: 'Поиск по сайту', type: 'search'},
                    false, 's', 'getValues()', 'header-duma',) 
            .header__buttons  
                a(href='/').header__eye-link
                    span.header__eye-link-title Версия для слабовидящих
                +button({ type: 'button', class: 'button_blue button_header', event: 'anotherFunction()', icon: '', size: 'xs', text: 'Служебный вход' })             
        .header__bottom-content   
            +header-links([
                {
                    href: '/',
                    title: 'О Сургуте',
                },
                {
                    href: '/',
                    title: 'Городская власть',
                },
                {
                    href: '/',
                    title: 'Документы',
                },
                {
                    href: '/',
                    title: 'Контакты',
                },
                ]) 
            +header-socials([
                {
                    href: '/',
                    class: 'vk_icon-duma'
                },
                {
                    href: '/',
                    class: 'ok_icon-duma'
                },
                ])           