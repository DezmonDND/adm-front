include ../breadcrumbs/_breadcrumbs
include ../title/_title
include ../tabs/main/_tabs
include ../filters/filters
include ../afisha/events-list/events-list
include ../pagination/_pagination

mixin adm-all-news()
    .adm-all-news
        +breadcrumbs(
            [
                { sort: '', href: '/', text: 'Главная' },
                { sort: '', href: '/', text: 'Новости'},
            ],
        )
        +title({
            title: 'Новости',
            buttons: [
                {
                    type: 'button', text: 'RSS', class: 'button_white button_white_no-border', icon: 'logo-rss', iconPosition: 'left', event: '1'
                },
                {
                    type: 'button', text: 'Подписаться на главное', class: 'button_white button_white_no-border', icon: 'mail', iconPosition: 'left', event: '1'
                },
            ]
                })
        +tabs([
            { title: 'Самые важные', href: '/' , value: 'Самые важные', isActive: true},
            { title: 'Реализация нацпроектов', href: '/' , value: 'Реализация нацпроектов'},
            { title: 'Деятельность администрации', href: '/' , value: 'Деятельность администрации'},
            { title: 'Областная дума', href: '/' , value: 'Областная дума'},
            ])
        input(id="from" name="from" value style='display: none;')  
        input(id="to" name="to" value style='display: none;')     
        //- +filters()
        .adm-all-news__calendar
            +button({ type: 'button',  event: 'toggleAdmAllNewsCalendar();', class: 'search-by-site__button adm-all-news__calendar-button', icon: 'calendar-outline', iconPostion: 'left', text: "Период публикации"})
            .adm-all-news__calendar-content
                +chronicle-calendar('calendar-all-news')
        input(id="from" name="from" value style='display: none;')  
        input(id="to" name="to" value style='display: none;')     
        +afisha-events()
        +pagination(7,4,2)