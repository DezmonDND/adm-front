mixin slider(data={}) 
    .slider
        -const hasLinkClass = data.class ? `${data.class}` : ''

        a(class=`slider__link slider__${hasLinkClass}-prev`)
            ion-icon(name='arrow-back-outline')
        a(class=`slider__link slider__${hasLinkClass}-next`)
            ion-icon(name='arrow-forward-outline') 