include ../../title/_title
include ../init-card/init-card

mixin init-project-detail(data)
    .init-project-detail    
        .init-project-detail__container 
            +title({
                title: 'Наименование инициативного проекта'
            })
            .init-projects__map
                iframe(src="https://yandex.ru/map-widget/v1/?um=constructor%3A4b282a3890b57f3edc0ace8ef27e29dc87c6b0f49529581fb5faabd9e13f1429&amp;source=constructor" width="100%" height="444px" frameborder="0")
            +init-card({
                detail: true,
            }) 
            .init-project-detail__desc 
                p #[a(href='/').link Ваш инициативный проект] сформирован. Вы вправе обратиться с данным инициативным проектом в письменном виде в МКУ “Наш город” за оказанием информационной и консультационной помощи по дальнейшим этапам работы с проектом и вопросами:   
                ul 
                    li составления и оформления инициативного проекта;
                    li определения части территории города Сургута, на которой могут реализовываться инициативные проекты;
                    li организации и проведения собраний (конференций), опроса граждан и (или) сбора подписных листов, подтверждающих поддержку инициативного проекта
                p По адресу г. Сургут, ул. Дзержиинского, д.5, телефон 8 (3462) 28-27-08    