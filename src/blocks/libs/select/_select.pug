mixin select(name, type, iconPosition, options, cls, size)
  if type === 'multiple'
    select.select.select_multiple(name=`${name}[]` multiple='multiple' role='listbox')
      if options
        each option in options
          option(class=`select__option` value=option.value)= option.text
  else
    - const hasClass = cls ? cls : '';
    - const hasSize = size ? `select_${size}` : ''
    - const classIconPosition = iconPosition ? `select-icon-${iconPosition}` : '';

    select.select(class=[hasClass, hasSize, classIconPosition] name=name role='listbox')
      if options
        each option in options
          option(class=`select__option` value=option.value)= option.text