mixin select(iconPosition, options, type, cls, size, name)
  if type === 'multiple'
    select.select.select_multiple(name=`${name}[]` multiple='multiple')
      if options
        each option in options
          option(class=`select__option` value=option.value)= option.text
  else
    - const hasClass = cls ? cls : '';
    - const hasSize = size ? `select_${size}` : ''
    - const classIconPosition = iconPosition ? `select-icon-${iconPosition}` : '';

    select.select(class=[hasClass, hasSize, classIconPosition] name=name)
      if options
        each option in options
          option(class=`select__option` value=option.value)= option.text