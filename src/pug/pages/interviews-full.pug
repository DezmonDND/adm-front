extends ../layout

block content   
    main.main
        +breadcrumbs(
            [
                { sort: '', href: '/', text: 'Главная' },
                { sort: '', href: '/', text: 'Опросы'},
                { sort: '', href: '/', text: 'Создание агломераций на территории Ханты-Мансийского автономного округа-Югры'},
            ],
        )
        +interview-full(
            { 
                date: 'до 29 сентября',
                votes: '319 голосов',
                title: 'Cоздание агломераций на территории Ханты-Мансийского автономного округа – Югры',
                description: 'Просим Вас принять участие в опросе и высказать своё мнение о создании агломерации на территории автономного округа. Создание агломераций предусмотрено Стратегией социально-экономического развития Ханты-Мансийского автономного округа – Югры до 2020 года и на период до 2030 года и позволит решить ряд важнейших задач, среди них: повышение эффективности использования ресурсов и человеческого капитала; развитие межмуниципального сотрудничества по приоритетным направлениям, выравнивание экономического потенциала городов и районов, развитие промышленных и социальных объектов и другие.Ваше мнение позволит оценить степень востребованности подобных изменений.',
                tag: {
                    sort: 'interview-full',    
                    text: 'Идет',
                    isGoing: true,
                    },   
            })
        form.interview-form
            +form-field(
                {
                    type: 'radio',
                    title: '1. Предполагается возможность финансового участия соответствующих заинтересованных лиц в реализации инициативного проекта?', 
                    checkboxes: [
                        { 
                            id: 1, 
                            label: 'Да', 
                            sort: 'radio',
                            status: false,
                            name: 'radio'
                            },
                        { 
                            id: 2, 
                            label: 'Нет', 
                            sort: 'radio',
                            status: false,
                            name: 'radio'
                            },
                        ],
                })  
            +form-field(
                {
                    type: 'checkbox',
                    title: '2. Предполагается возможность финансового участия соответствующих заинтересованных лиц в реализации инициативного проекта?', 
                    checkboxes: [
                        { 
                            id: 3, 
                            label: 'Первый вариант',
                            sort: 'checkbox',
                        },
                        { 
                            id: 4,
                            label: 'Второй вариант',
                            sort: 'checkbox',
                        },
                        { 
                            id: 5, 
                            label: 'Третий вариант',
                            sort: 'checkbox', 
                        },
                        ],
                })
            +form-field(
                {
                    type: '',
                    title: '3. Предполагается возможность финансового участия соответствующих заинтересованных лиц в реализации инициативного проекта?',
                    span: 'Вспомогательный текст',
                    error: false,
                    inputs: [
                        {
                            placeholder: 'Введите ваш ответ',
                            name: 'answer3', 
                            sort: 'interview-full',
                        },
                        ] 
                })
            +form-field(
                {
                    type: 'textarea',
                    title: '4. Предполагается возможность финансового участия соответствующих заинтересованных лиц в реализации инициативного проекта?',
                    span: 'Вспомогательный текст',
                    error: false,
                    options: {
                        placeholder: 'Введите ваш ответ',
                        value: '900'
                            }
                })
            +button({ type: 'button', class: 'button_blue button_interview', event: 'getValues(event)', icon: 'arrow_icon.svg', text: `Отправить форму` }) 
    +thanks({
        title: 'Благодарим вас за принятие участия в опросе!',
        description: 'Ваш вклад помогает городу становиться лучше. Примите участие и в других опросах - вместе мы сделаем город Сургут лучше!',
        options: {
            type: 'link', 
            class: 'button_blue button_thanks', 
            href: '/', 
            icon: '', 
            text: `Перейти к опросам` }
        }
    )  