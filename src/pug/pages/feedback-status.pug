extends ../layout

block content
    main.main 
        +breadcrumbs(
            [
                { sort: '', href: '/', text: 'Главная' },
                { sort: '', href: '/', text: 'Опросы'},
                { sort: '', href: '/', text: 'Создание агломераций на территории Ханты-Мансийского автономного округа-Югры'},
            ],
            )
        +title({
                title: 'Узнать статус обращения'
            })
        .feedback-status
            .feedback-status__container 
                .feedback-status__title Введите выданный номер обращения
                form.feedback-status__form
                    +input({
                        placeholder: 'Номер обращения'
                    })
                    +button({
                        type: 'button',
                        class: 'button_blue',
                        text: 'Искать'
                    })
